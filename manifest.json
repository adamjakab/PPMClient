{
    "name": "Paranoia Password Manager",
    "version": "1.3.1",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "manifest_version": 2,
    "content_security_policy": "default-src 'self' 'unsafe-eval'; connect-src http://* https://*; script-src 'self' https://ssl.google-analytics.com; img-src 'self' http://www.google-analytics.com/__utm.gif; object-src 'self'; style-src 'self' 'unsafe-inline'",
    "permissions": [ "tabs", "idle", "storage", "http://*/*", "https://*/*" ],
    "background": {"page": "background.html"},
    "icons": {
        "32": "images/paranoia_32.png",
        "48": "images/paranoia_48.png",
        "64": "images/paranoia_64.png",
        "128": "images/paranoia_128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/state_icons/offline.png"
        },
        "default_popup": "popup.html",
        "default_title": "Paranoia"
    },
    "options_page": "options.html#ppmoptions",
    "omnibox": {
        "keyword": "ppm"
    }
}

